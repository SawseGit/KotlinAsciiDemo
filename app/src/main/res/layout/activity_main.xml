<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.chocosawse.kotlindemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/chars"
                android:text="123456"
                android:hint="@string/name_goes_here"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/compression"
                android:inputType="number"
                android:text="10"
                android:hint="@string/compression_goes_here"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/reverse"
                android:text="@string/reverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/clear"
                android:text="@string/clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/render"
                android:text="@string/render"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/doge"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@drawable/doge"
                android:layout_width="32dp"
                android:layout_height="32dp" />

            <Button
                android:id="@+id/db"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@drawable/dickbutt"
                android:layout_width="32dp"
                android:layout_height="32dp" />
        </LinearLayout>

        <com.chocosawse.kotlindemo.AsciiView
            android:id="@+id/ascii"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_width="320dp"
            android:layout_height="320dp" />
    </LinearLayout>
</ScrollView>
